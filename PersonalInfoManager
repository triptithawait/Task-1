class PersonalInfoManager:
    def __init__(self, name, age, city, hobbies):
        self.name = name
        self.age = age
        self.city = city
        self.hobbies = hobbies

    def display_info(self):
        print("\nğŸ“‹ Personal Information")
        print("-" * 30)
        print(f"ğŸ‘¤ Name     : {self.name}")
        print(f"ğŸ‚ Age      : {self.age}")
        print(f"ğŸ™ï¸ City     : {self.city}")
        print("ğŸ¯ Hobbies  :")
        for i, hobby in enumerate(self.hobbies, 1):
            print(f"   {i}. {hobby}")
        print("-" * 30)


# Example usage
if __name__ == "__main__":
    name = "Tripti"
    age = 21
    city = "Tilda"
    hobbies = ["Coding", "Reading", "Playing Chess"]

    manager = PersonalInfoManager(name, age, city, hobbies)
    manager.display_info()
